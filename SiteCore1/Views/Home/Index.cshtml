@model IEnumerable<SiteCore1.Models.Project>
@{
    ViewData["Title"] = "Index";
}

@{ 
    string[] NameTitle = new string[] { "Новые проекты", "Наиболее профинансированные" };

}

<div class="row">
    <div class="col-md-12" align="center">
    @{    
        int IndexModel = 0;
        for (int CountProject = 0; CountProject < NameTitle.Length; CountProject++)
        {
            <h2 align="center">@NameTitle[CountProject]</h2>
            <hr />
        <div class="row">
            @for (int a = 0; a < 4; IndexModel++, a++)
            {
            <div class="col-md-3">
                <a href="~/Project/Index?=@Model.ElementAt(IndexModel).Id">
                    <img src="@Model.ElementAt(IndexModel).ImageTitle" style="float:none;max-width: 100%; height: auto; max-height: 150px;">
                    <span>@Model.ElementAt(IndexModel).Title</span>
                </a>
            </div>
            }
         </div>
        }
    }
    </div>
</div>

<style>
    .col-md-3 {
        display: inline-block;
        text-align: center;
    }
    .col-md-3 span {
        display: inline-block;
        position: absolute;
        top: 60px;
        left: 5px;
        /* Text css*/
        color: #FFF;
        font-family: Arial, Helvetica, sans-serif;
        font-size: 20px;
        /* Bachground */
        background-color: rgba(0,0,0,.4);
    }
    </style >
